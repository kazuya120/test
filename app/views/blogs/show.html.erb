<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @blog.user %>
      <h2 class="mt-3">New blog</h2>
      <%= render 'blogs/form', blog: @newblog %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Blog detail</h2>
      <table class="table">
        <tr id="blog_<%= @blog.id %>">
          <td>
            <%= link_to user_path(@blog.user) do %>
            <%= attachment_image_tag(@blog.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @blog.user.name %>
            <% end %>
          </td>
          <td><%= link_to @blog.title, blog_path(@blog) %></td>
          <td><%= @blog.body %></td>
          <td id="favorites_btn_<%= @blog.id %>">
            <%= render 'favorites/favorite', blog: @blog %>
          </td>
          <% if @blog.user == current_user %>
          <td><%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-sm btn-success edit_blog_#{@blog.id}" %></td>
          <td><%= link_to 'Destroy', blog_path(@blog), method: :delete, data: {confirm: '本当に削除しますか？'}, class: "btn btn-sm btn-danger destroy_blog_#{@blog.id}" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>