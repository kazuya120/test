<div class="container px-5 px-sm-0">
  <%= render 'layouts/errors', obj: @blog %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New blog</h2>
      <%= render 'form', blog: @blog %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Blogs</h2>
      <%= render 'index', blogs: @blogs %>
    </div>
  </div>
</div>